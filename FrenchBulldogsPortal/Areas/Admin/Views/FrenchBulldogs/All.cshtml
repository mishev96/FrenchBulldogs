@model IEnumerable<FrenchBulldogServiceModel>

@{
    ViewBag.Title = "French Bulldogs Administration";
}

<h1>All French Bulldogs</h1>

<table class="table table-striped">
    <thead class="thead-dark">
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Name</th>
            <th scope="col">Color</th>
            <th scope="col">Age</th>
            <th scope="col">Category</th>
            <th scope="col">Approved</th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var frenchBulldog in Model)
        {
        <tr>
            <td scope="col">@frenchBulldog.Id</td>
            <td scope="col">@frenchBulldog.Name</td>
            <td scope="col">@frenchBulldog.ColorName</td>
            <td scope="col">@frenchBulldog.Age</td>
            <td scope="col">@frenchBulldog.CategoryName</td>
            <td scope="col">
                <a asp-area="" asp-controller="FrenchBulldogs" asp-action="Delete" asp-route-id="@frenchBulldog.Id" class="btn btn-danger float-right ml-3">Delete</a>
                <a asp-area="" asp-controller="FrenchBulldogs" asp-action="Edit" asp-route-id="@frenchBulldog.Id" class="btn btn-warning float-right ml-3">Edit</a>
                <a asp-area="" asp-controller="FrenchBulldogs" asp-action="Details" asp-route-id="@frenchBulldog.Id" asp-route-information="@frenchBulldog.GetInformation()" class="btn btn-primary float-right ml-3">View</a>
            </td>
        </tr>
        }
    </tbody>
</table>