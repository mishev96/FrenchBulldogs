@model AllFrenchBulldogsQueryModel

@{
    ViewBag.Title = "All French Bulldogs";
}

<form method="get">
    <div class="row">
        <div class="form-group col-md-4">
            <div class="form-group">
                <label asp-for="Name"></label>
                <select asp-for="Name" class="form-control">
                    <option value="">All</option>

                    @foreach (var name in Model.Names)
                    {
                        <option value="@name">@name</option>
                    }
                </select>
            </div>
        </div>

        <div class="form-group col-md-4">
            <label asp-for="SearchTerm"></label>
            <input asp-for="SearchTerm" class="form-control" placeholder="blue, cream, etc...">
        </div>

        <div class="form-group col-md-4">
            <div class="form-group">
                <label asp-for="Sorting"></label>
                <select asp-for="Sorting" class="form-control">
                    <option value="0" selected>Date Created</option>
                    <option value="1">Age</option>
                    <option value="2">Name And Color</option>
                </select>
            </div>
        </div>
    </div>
</form>

@{
    var previousPage = Model.CurrentPage - 1;
    if (previousPage < 1)
    {
        previousPage = 1;
    }

    var maxPage = Math.Ceiling((double)Model.TotalFrenchBulldogs / AllFrenchBulldogsQueryModel.FrenchBulldogsPerPage);
}

<div class="row mb-5">
    <div class="col-md-6">
        <a class="btn btn-primary @(Model.CurrentPage == 1 ? "disabled" : string.Empty)"
           asp-controller="FrenchBulldogs"
           asp-action="All"
           asp-route-currentPage="@previousPage"
           asp-route-name="@Model.Name"
           asp-route-searchTerm="@Model.SearchTerm"
           asp-route-sorting="@((int)Model.Sorting)"><<</a>
    </div>
    
    @{
        var shouldButtonBeDisabled = Model.CurrentPage == maxPage ||
                                     !Model.FrenchBulldogs.Any();
    }

    <div class="col-md-6">
        <a class="btn btn-primary float-sm-right @(shouldButtonBeDisabled ? "disabled" : string.Empty)" style="margin-top: 10px"
           asp-controller="FrenchBulldogs"
           asp-action="All"
           asp-route-currentPage="@(Model.CurrentPage + 1)"
           asp-route-name="@Model.Name"
           asp-route-searchTerm="@Model.SearchTerm"
           asp-route-sorting="@((int)Model.Sorting)">>></a>
    </div>
</div>

@if (!Model.FrenchBulldogs.Any())
{
    <h2 class="text-center">No French Bulldogs found by the given criteria!</h2>
}

<partial name="_FrenchBulldogsPartial" model="@Model.FrenchBulldogs" />
