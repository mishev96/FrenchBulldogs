<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <!-- <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no"> -->

    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/custom.css">

    <title>French Bulldog Portal</title>
</head>
<body>
    <header>
        <div class="container">
            <nav class="navbar navbar-expand-lg navbar-light">
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="text-white">MENU</span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    {{if(IsAuthenticated)}}
                    {
                    <ul class="navbar-nav mr-auto">
                        <li class="nav-item">
                            <a class="nav-link text-secondary active h5" href="/">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-secondary active h5" href="/FrenchBulldogs/Add">Add Puppy</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-secondary active h5" href="/Players/Collection">My Collection</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-danger active h5" href="/Users/Logout">Logout</a>
                        </li>
                    </ul>
                    }
                    {{else}}
                    {
                    <ul class="navbar-nav mr-auto">
                        <li class="nav-item">
                            <a class="nav-link text-secondary active h5" href="/">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-secondary active h5" href="/Users/Login">Login</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-secondary active h5" href="/Users/Register">Register</a>
                        </li>
                    </ul>
                    }
                </div>
            </nav>
        </div>
    </header>
    <main>
        {{RenderBody}}
    </main>

    <footer>
        <div class="container-fluid text-center">
            <small class="footer-background text-secondary">
                CopyRight &copy; French Bulldog Portal 2022. All rights reserved.
            </small>
        </div>
    </footer>


    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js"></script>
    <script src="/js/bootstrap.bundle.min.js"></script>
    <script src="/js/custom.js"></script>
</body>
</html>